pipeline {
    agent any

    environment {
        PYTHON = "python3"
        VENV_DIR = ".venv"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Клон репо"
                checkout scm
            }
        }

        stage('Install Python & deps') {
            steps {
                echo "Інсталимось"

                sh '''
                    apt-get update
                    apt-get install -y python3 python3-venv python3-pip

                    if [ ! -d $VENV_DIR ]; then
                        python3 -m venv $VENV_DIR
                    fi

                    source $VENV_DIR/bin/activate
                    pip install --upgrade pip
                    pip install -r lesson_29/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo "Тести"

                sh '''
                    source $VENV_DIR/bin/activate
                    pytest lesson_29/tests --alluredir=allure-results
                '''
            }
        }

        stage('Allure Report') {
            steps {
                echo "Allure"
            }
            post {
                always {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Результати ",
                body: "Чекни резалти",
                to: "songwriterm77@icloud.com"
            )
        }
    }
}
