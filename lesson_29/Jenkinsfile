pipeline {
    agent any

    environment {
        DB_HOST = "pg_test"
        DB_NAME = "testdb"
        DB_USER = "testuser"
        DB_PASSWORD = "testpassword"
        DB_PORT = "5432"
        PYTHONPATH = "./lesson_29"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Клон репо"
                checkout scm
            }
        }

        stage('Start PostgreSQL') {
            steps {
                echo " PostgreSQL "
                sh '''
                    docker rm -f pg_test || true

                    docker run -d --name pg_test \
                        -e POSTGRES_USER=$DB_USER \
                        -e POSTGRES_PASSWORD=$DB_PASSWORD \
                        -e POSTGRES_DB=$DB_NAME \
                        postgres:15

                    echo "Чекаємо запуск PostgreSQL..."
                    sleep 10
                '''
            }
        }

        stage('Install Python') {
            steps {
                echo " Python"
                sh '''
                    apt-get update
                    apt-get install -y python3 python3-pip python3-venv
                '''
            }
        }

        stage('Install deps') {
            steps {
                echo " залежності"
                sh '''
                    python3 -m venv .venv
                    . .venv/bin/activate
                    pip install --upgrade pip
                    pip install -r lesson_29/requirements.txt
                '''
            }
        }

        stage('Run tests') {
            steps {
                echo " pytest"
                sh '''
                    . .venv/bin/activate
                    pytest lesson_29/tests --alluredir=allure-results
                '''
            }
        }

        stage('Allure report') {
            steps {
                echo " Allure"
            }
            post {
                always {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
    }

    post {
        always {
            echo "Видаляємо PostgreSQL "
            sh 'docker rm -f pg_test || true'

            emailext(
                subject: "Pipeline статус",
                body: "Тести виконано",
                to: "songwriterm77@icloud.com"
            )
        }
    }
}
