pipeline {
    agent {
        docker {
            image 'python:3.12'
            args '-u root'
        }
    }

    environment {
        PYTHON = "python3"
        VENV_DIR = ".venv"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Клонуємо репозиторій"
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo "Ставимо залежності"
                sh '''
                    python3 --version
                    pip install --upgrade pip
                    pip install -r lesson_29/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo "Прогон тестів"
                sh '''
                    pytest lesson_29/tests --alluredir=allure-results
                '''
            }
        }

        stage('Allure Report') {
            steps {
                echo "Генеруємо Allure"
            }
            post {
                always {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
    }

    post {
        always {
            echo "Email"
            emailext(
                subject: "Відправляю собі ж на пошту",
                body: "Доне, чек резалти",
                to: "songwriterm77@icloud.com"
            )
        }
    }
}
