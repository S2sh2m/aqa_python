pipeline {
    agent any

    environment {
        DB_HOST     = "host.docker.internal"
        DB_PORT     = "5433"
        DB_NAME     = "testdb"
        DB_USER     = "testuser"
        DB_PASSWORD = "testpassword"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Клон репо"
                checkout scm
            }
        }

        stage('Start PostgreSQL') {
            steps {
                echo "Старт PostgreSQL "
                sh '''
                    docker rm -f pg_test || true

                    docker run -d --name pg_test \
                        -e POSTGRES_USER='${DB_USER}' \
                        -e POSTGRES_PASSWORD='${DB_PASSWORD}' \
                        -e POSTGRES_DB='${DB_NAME}' \
                        -p ${DB_PORT}:5432 \
                        postgres:15

                    echo "Запуск PostgreSQL..."
                    sleep 10
                '''
            }
        }

        stage('Install Python') {
            steps {
                echo " Python"
                sh '''
                    apt-get update
                    apt-get install -y python3 python3-pip python3-venv
                '''
            }
        }

        stage('Install deps') {
            steps {
                echo "Залежності"
                sh '''
                    python3 -m venv .venv
                    . .venv/bin/activate
                    pip install --upgrade pip
                    pip install -r lesson_29/requirements.txt
                '''
            }
        }

        stage('Run tests') {
            steps {
                echo " pytest"
                sh '''
                    . .venv/bin/activate
                    pytest lesson_29/tests --alluredir=allure-results
                '''
            }
        }

        stage('Allure ') {
            steps {
                echo " Allure"
            }
            post {
                always {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
    }

    post {
        always {
            echo "Ремуваємо PostgreSQL "
            sh 'docker rm -f pg_test || true'

            emailext(
                subject: "Pipeline статус",
                body: "Тести ",
                to: "songwriterm77@icloud.com"
            )
        }
    }
}
