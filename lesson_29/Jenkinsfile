pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                echo "Клонимо"
                checkout scm
            }
        }

        stage('Run in Docker') {
            steps {
                echo " тести докер"

                sh '''
                    docker run --rm \
                        -v $PWD:/app \
                        -w /app \
                        python:3.12 bash -c "\
                            pip install --upgrade pip && \
                            pip install -r lesson_29/requirements.txt && \
                            pytest lesson_29/tests --alluredir=allure-results \
                        "
                '''
            }
        }

        stage('Allure Report') {
            steps {
                echo " Allure"
            }
            post {
                always {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Резалти",
                body: "Pipeline завершено. Перевір Allure.",
                to: "songwriterm77@icloud.com"
            )
        }
    }
}
