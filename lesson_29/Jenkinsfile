pipeline {
    agent any

    environment {
        PYTHON = "python3"
        VENV_DIR = ".venv"
        PYTHONPATH = "${WORKSPACE}/lesson_29"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Клон репо"
                checkout scm
            }
        }

        stage('Install Python') {
            steps {
                echo "Встановлюємо Python"
                sh '''
                    apt-get update
                    apt-get install -y python3 python3-pip python3-venv
                '''
            }
        }

        stage('Install deps') {
            steps {
                echo "Ставимо залежності"
                sh '''
                    ${PYTHON} -m venv ${VENV_DIR}
                    . ${VENV_DIR}/bin/activate
                    pip install --upgrade pip
                    pip install -r lesson_29/requirements.txt
                '''
            }
        }

        stage('Run tests') {
            steps {
                echo "Запускаємо pytest"
                sh '''
                    . ${VENV_DIR}/bin/activate
                    pytest lesson_29/tests --alluredir=allure-results
                '''
            }
        }

        stage('Allure report') {
            steps {
                echo "Генеруємо Allure звіт"
            }
            post {
                always {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        results: [[path: 'allure-results']]
                    ])
                }
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Pipeline статус",
                body: "Allure звіт виконання пайплайну дивись у Jenkins.",
                to: "songwriterm77@icloud.com"
            )
        }
    }
}
